{
  "name": "@buslogic/sadmin2025-mcp",
  "version": "0.1.0",
  "description": "MCP server for SADMIN 2025 API integration with Claude Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:local": "cp .env.local .env && tsx watch src/index.ts",
    "dev:prod": "cp .env.production .env && tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:local": "cp .env.local .env && node dist/index.js",
    "start:prod": "cp .env.production .env && node dist/index.js",
    "start:rest": "node dist/index.js",
    "start:mcp": "node dist/mcp-server.js",
    "dev:rest": "tsx watch src/index.ts",
    "dev:mcp": "tsx watch src/mcp-server.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "env:local": "cp .env.local .env && echo 'Switched to LOCAL environment'",
    "env:prod": "cp .env.production .env && echo 'Switched to PRODUCTION environment'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buslogic/sadmin2025-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "claude",
    "sadmin",
    "api",
    "integration"
  ],
  "author": "buslogic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buslogic/sadmin2025-mcp-server/issues"
  },
  "homepage": "https://github.com/buslogic/sadmin2025-mcp-server#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
